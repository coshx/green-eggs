%p#notice= notice

%h1 Manage your poll

%p
  %b Name:
  = @poll.name

%p
  = link_to 'Invite voters', invite_voters_path(:poll_id => @poll.id, :owner_key => @poll.owner_key)

%p
  %h4 Outstanding ballots
  %ul
    - @poll.ballots.outstanding.each do |ballot|
      %li
        = ballot.email
        (#{link_to "ballot", vote_on_ballot_path(:ballot_key => ballot.key, :poll_id => @poll.id)})

%p
  %h4 Cast ballots
  %ul
    - @poll.ballots.cast.each do |ballot|
      %li
        = ballot.email
        (#{link_to "ballot", vote_on_ballot_path(:ballot_key => ballot.key, :poll_id => @poll.id)})

