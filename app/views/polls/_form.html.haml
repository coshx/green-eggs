= form_for @poll do |f|
  -if @poll.errors.any?
    #error_explanation
      %h2= "#{pluralize(@poll.errors.count, "error")} prohibited this poll from being saved:"
      %ul
        - @poll.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label 'Your email address'
    = f.text_field :owner_email
  .actions
    = f.submit 'Save'
