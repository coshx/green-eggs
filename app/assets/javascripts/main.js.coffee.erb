  $scope.poll = {}
  $scope.poll.choices = []

  $scope.addChoice = (choice) ->
    $scope.poll.choices.push($.extend({}, choice))
    $scope.newChoice = ""
  $scope.removeChoice = (index) ->
    $scope.poll.choices.splice(index, 1)


  $scope.savePoll = (poll) ->
