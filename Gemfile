source 'http://rubygems.org'

gem 'rails', '~> 3.2.3'

gem 'haml'
gem 'haml-rails'
gem 'heroku'
gem 'json'
gem 'mongoid', '~> 2.4.11'
gem 'bson_ext'
gem 'therubyracer'
gem 'formtastic'
gem 'ruby_flipper'
gem 'ember-rails', '0.5.0'

# sass mixin library
gem 'bourbon'

# generate polls from github issues
gem "github_api"

# real-time updating
gem 'firehose'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :development, :test do
  # fancy debugger
  gem "pry"
  gem "pry-nav"
  gem 'rspec-rails'
end

group :test do
  gem 'rspec'
  gem 'factory_girl'
  gem 'mongoid-rspec', :require => false
  gem 'cucumber-rails'
  gem 'vcr'
  gem 'fakeweb'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'email_spec'
  gem 'capybara-webkit'
  gem 'guard'
  gem 'guard-spork'
  gem 'guard-rspec'
  gem 'guard-cucumber'
  gem 'guard-bundler'
  gem 'guard-migrate'
  gem 'guard-rake'
  gem 'timecop'
end
